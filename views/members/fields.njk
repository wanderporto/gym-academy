<div class="item">
    <div>Avatar URL</div>
    <div>
        <input type="url" name="avatar_url" placeholder="https://" value="{{member.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Member</div>
    <div>
        <input type="text" name="name" value="{{member.name}}">
    </div>
</div>
<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" value="{{member.email}}">
    </div>
</div>
<div class="item">
    <div>Data de Nascimento</div>
    <div>
        <input type="date" name="birth" value="{{member.birth}}">
    </div>
</div>
<div class="item">
    <div>Sexo</div>
    <div>
        <span>
            <input 
                  type="radio" 
                  name="gender" 
                  value="M" 
                  {%if member.gender == 'M' %} checked {%endif%}>Masculino
        </span>
        <span>
            <input 
                  type="radio" 
                  name="gender" 
                  value="F"
                  {%if member.gender == 'F' %} checked {%endif%}
                  >Feminino
        </span>
    </div>
</div>
<div class="item">
    <div>Tipo Sanguineo</div>
    <div>
        <select name="blood">
            <option value="A1"
            {%if member.blood == "A" %} selected {%endif%}
            >A+</option>
            <option value="A0"
            {%if member.blood == "A0" %} selected {%endif%}
            >A-</option>
            <option value="B1"
            {%if member.blood == "B1" %} selected {%endif%}
            >B+</option>
            <option value="B0"
            {%if member.blood == "B0" %} selected {%endif%}
            >B-</option>
            <option value="AB1"
            {%if member.blood == "AB1" %} selected {%endif%}
            >AB+</option>
            <option value="AB0"
            {%if member.blood == "AB0" %} selected {%endif%}
            >AB-</option>
            <option value="01"
            {%if member.blood == "01" %} selected {%endif%}
            >0+</option>
            <option value="00"
            {%if member.blood == "00" %} selected {%endif%}
            >0-</option>
        </select>
    </div>
</div>
<div class="item">
    <div>Peso (kg)</div>
    <div>
        <input type="number" name="weight" value="{{member.weight}}">
    </div>
</div>
<div class="item">
    <div>Altura (cm)</div>
    <div>
        <input type="number" name="height" value="{{member.height}}">
    </div>
</div>
<button type="submit">Salvar</button>